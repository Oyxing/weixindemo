/* pages/map/map.wxss */

#myMap{
  width: 100%;
  height: 60vh;
  position: fixed;
}
.identifying{
  position: absolute;
  width: 32px;
  height: 32px;
  top: calc(50% - 27.5px);
  left: 0px;
  right: 0px;
  margin: auto;
} 
.image {
  position: fixed;
  width: 32px;
  height: 32px;
  top: 0px;
  left: 0px;
  right: 0px;
  margin: 0px auto;
  background-image: url("http://www.89yxing.top/images/place.png");
  background-repeat:no-repeat;
  background-size:100%;
}
 /*  */
.pois {
  position: absolute;
  height: 300px;
}
.poisbom{
  padding: 10px 0px;
  line-height: 20px;
  text-align: left;
  margin-left: 10px;
}

.poisbom text:nth-child(1){
  font-size: 16px;
  color: #343530;
}
.poisbom text:nth-child(2){
  margin-top: 5px;
  font-size: 12px;
  color: #8a8b86;
}

.poisbom .poisbomico{
  float: right;
  line-height: 20px;
  margin-right: 20px;
  width: 16px;
  height: 16px;
  background-image: url("http://www.89yxing.top/images/optfor.png");
  background-repeat:no-repeat;
  background-size:100%;
}

/*定义滚动条高宽及背景 高宽分别对应横竖滚动条的尺寸*/
::-webkit-scrollbar
{
width: 6px;
height: 6px;
background-color: #ffffff;
}
/*定义滚动条轨道 内阴影+圆角*/
::-webkit-scrollbar-track
{
-webkit-box-shadow: inset 0 0 10px rgba(0,0,0,0.3);
border-radius: 10px;
background-color: #fff;
}
/*定义滑块 内阴影+圆角*/
::-webkit-scrollbar-thumb
{
border-radius: 10px;
-webkit-box-shadow: inset 0 0 10px rgba(0,0,0,.3);
background-color: #ccc;
}
